generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:test.db"
}

model Category {
  id Int @id @default(autoincrement())
  name String @unique
  posts Post[]
}

model Post {
  title       String
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  Int?
  published   Boolean? @default(false)
  description String?
  price       String
  created     DateTime @default(now())
  author      String
  signature   String   @unique
}